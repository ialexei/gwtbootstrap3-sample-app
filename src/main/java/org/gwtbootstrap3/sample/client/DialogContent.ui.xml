<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
	xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'>

	<g:VerticalPanel>
		<b:NavTabs>
			<b:TabListItem active="true" dataTarget="#tab1" text="Tab 1" />
			<b:TabListItem dataTarget="#tab2" text="Tab 2" />
			<b:TabListItem dataTarget="#tab3" text="Tab 3" />
		</b:NavTabs>
		<b:TabContent>
			<b:TabPane active="true" b:id="tab1">
				<g:VerticalPanel>
					<g:SimplePanel width="400px" height="200px"/>
					<g:Label>Tab 1 Content</g:Label>
				</g:VerticalPanel>
			</b:TabPane>
			<b:TabPane b:id="tab2">
				<g:VerticalPanel>
					<g:SimplePanel width="400px" height="200px"/>
					<g:Label>Tab 2 Content</g:Label>
				</g:VerticalPanel>
			</b:TabPane>
			<b:TabPane b:id="tab3">
				<g:VerticalPanel>
					<g:SimplePanel width="400px" height="200px"/>
					<g:Label>Tab 3 Content</g:Label>
				</g:VerticalPanel>
			</b:TabPane>
		</b:TabContent>
	</g:VerticalPanel>
</ui:UiBinder>